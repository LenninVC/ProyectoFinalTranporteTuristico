    @Messages.Message("inUse", "Delete", "danger", "Este Producto está en uso en este momento.")
    @using (Ajax.BeginForm("Delete", new { Controller = "Reserva" },
                            new AjaxOptions
                            {
                                HttpMethod = "POST",
                                InsertionMode = InsertionMode.Replace,
                                UpdateTargetId = "modal-body",
                                OnSuccess = "reserva.success('delete');" +
                            "reserva.removeHubCustomer('" + @Model.IdReserva + "');"
                            },
                            htmlAttributes: new { id = "deleteForm" }
                          )
            )
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color" id="btn-save">
            <input type="submit" value="Delete" class="btn btn-default" />
        </div>
    }

</div>

<script type="text/javascript">
    $(function () {
        $.validator.unobtrusive.parse("#deleteForm");
        $('#inUse').addClass('hidden');
        reserva.addCustomer("@Model.IdReserva");
        reserva.validate("@Model.IdReserva");
    });

    reserva.closeModal = function () {
        if (!reserva.recordInUse)
            reserva.removeHubCustomer("@Model.IdReserva");
    };
</script>
